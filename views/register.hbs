<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto pt-1">
            <div class="card card-signin flex-row">
                <div class="card-body">
                    <h5 class="card-title text-center">Đăng ký</h5>
                    <form class="form-signin" id="form-register" method="POST" action="/account/register">
                        <div class="form-label-group">
                            <input type="text" id="inputUserame" name="username" class="form-control" placeholder="Tên đăng nhập" required
                                autofocus>
                            <label for="inputUserame">Tên đăng nhập</label>
                        </div>

                        <div class="form-label-group">
                            <input type="email" id="inputEmail" value="" name="email" class="form-control" placeholder="Địa chỉ email"
                                required>
                            <label for="inputEmail">Địa chỉ email</label>
                        </div>

                        <div class="form-label-group">
                            <input type="password" id="inputPassword" value="" name="password" class="form-control" placeholder="Mật khẩu"
                                required>
                            <label for="inputPassword">Mật khẩu</label>
                        </div>

                        <div class="form-label-group">
                            <input type="password" id="inputConfirmPassword" name="confirm_password" value="" class="form-control" placeholder="Nhập lại mật khẩu"
                                required>
                            <label for="inputConfirmPassword">Nhập lại mật khẩu</label>
                        </div>

                        <div class="form-label-group">
                            <input type="text" class="form-control" name="name" id="inputName" value="" placeholder="Nhập họ tên" required/>
                            <label for="inputName">Nhập họ tên</label>
                        </div>

                        <div class="form-label-group">
                            <input type="text" class="form-control" name="dob" id="inputDob" value="" placeholder="Chọn ngày sinh"  required/>
                            <label for="inputDob">Chọn ngày sinh</label>
                        </div>
                        {{#if error}}<div class="alert alert-danger" align="center">{{error}}</div>{{/if}}
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit" id="registerButton">Đăng ký</button>
                        <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i
                                class="fab fa-facebook-f mr-2"></i> Đăng nhập bằng Facebook</button>
                        <a class="d-block text-center mt-2 small" href="/account/login">Đăng nhập</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>