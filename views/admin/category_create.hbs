<div id="home">
    <!-- container -->
    <div class="container">
        <!-- home wrap -->
        <div class="home-wrap">

            <!-- Row start -->
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading clearfix">
                            <h3 class="panel-title">Thêm danh mục</h3>
                        </div>

                        <div class="panel-body">
                            <form class="form-horizontal row-border" action="" method="POST">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Tên danh mục</label>
                                    <div class="col-md-10">
                                        <input type="text" name="cat_name" class="form-control" placeholder="Nhập tên danh mục">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Chọn danh mục cha</label>
                                    <div class="col-md-10">
                                        <select class="form-control" name="cat_id">
                                            <option value="-1">-</option>
                                            {{#each pCategories}}
                                            <option value="{{ID}}">{{CAT_NAME}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-default center-block"><i class="glyphicon glyphicon-ok" aria-hidden="true"></i> Tạo</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Row end -->
        </div>


        <!-- /home wrap -->
    </div>
    <!-- /container -->
</div>