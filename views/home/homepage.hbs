								<img src="/images/product/{{imgSrc.HASH_NAME}}" height="250px" alt="">
							</div>
							<div class="product-body">
								<div class="product-label">
									{{#if isNew}}<span>Mới</span>{{/if}}
									{{#if AUTO_FLAG}}
									<span class="sale">Tự động</span>
									{{/if}}
								</div>
								<h3 class="product-price">{{CURRENT_PRICE_VND}} VNĐ
								</h3>
								<h2 class="product-name"><a href="#">{{PRODUCT_NAME}}</a></h2>
								{{#if ../user}}
								<div class="product-btns">
									<form action="/account/{{../user.ID}}/watch_list" method="POST">
										<input type="hidden" name="proID" value="{{ID}}">
										<button type="submit" class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
									</form>
								</div>
								{{/if}}
							</div>
						</div>
						<!-- /Product Single -->
						{{/each}}

					</div>
				</div>
			</div>
			<!-- /Product Slick -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /section -->


