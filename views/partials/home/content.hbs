<div class="card-header text-white bg-primary">Main</div>
<div class="card-body">

    <div class="row">
        {{#each ps}}
        <div class="col-sm-4">
            <div class="col-sm-12" style="padding: 5px">
                <div class="card" style="height: 450px">
                    <img class="card-img-top" src="https://via.placeholder.com/150" width="20" height="250" alt="d" />
                    <div class="card-body">
                        <h5 class="card-title" align="center">{{ProName}}</h5>
                        <h6 class="card-text" align="center" style="font-weight: bold; color:red;">{{Price}} VND</h6>
                        <p class="card-text" align="center">Số lượng: {{Quantity}}</p>
                        <a style="margin-left: 28px" href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {{#if navs.prev}}
                <li class="page-item">
                    <a class="page-link" href="?page{{ navs.prev }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {{else}}
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {{/if}}

            {{#each pages}}
                {{#if active}}
                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="javascript:;">
                            {{ value }} <span class="sr-only">(current)</span>
                        </a>
                    </li>
                {{else}}
                    <li class="page-item" aria-current="page">
                        <a class="page-link" href="?page={{ value }}">
                            {{ value }}
                        </a>
                    </li>
                {{/if}}
            {{/each}}

            {{#if navs.next}}
                <li class="page-item">
                    <a class="page-link" href="?page{{ navs.next }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {{else}}
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true" aria-label="Previous">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {{/if}}

      
        </ul>
    </nav>
</div>