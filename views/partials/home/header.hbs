<header>
    <!-- header -->
    <div id="header">
        <div class="container">
            <div class="pull-left">
                <!-- Logo -->
                <div class="header-logo">
                    <a class="logo" href="/">
                        <img src="/images/logo.png" alt="">
                    </a>
                </div>
                <!-- /Logo -->

                <!-- Search -->
                <div class="header-search">
                    <form method="GET" action="/product/search">
                        <input class="input search-input" name="name_search" type="text"
                            placeholder="Nhập từ khóa">
                        <select class="input search-categories" name="selected_option" style="width: 140px">
                            <option value="0">All Categories</option>
                            {{#each cats}}
                                {{#if PARENT_ID}}
                                    <option value="{{ID}}">{{CAT_NAME}}</option>
                                {{/if}}
                            {{/each}}
                        </select>                       
                        <select style="width: 140px;" name="style_sort">
                            <option value="1">Giá tăng dần</option>
                            <option value="2">Thời gian kết thúc giảm dần</option>
                        </select>
                        <button type="submit" class="search-btn"><i class="fas fa-search"></i></button>
                    </form>
                </div>
                <!-- /Search -->
            </div>
            <div class="pull-right">
                <ul class="header-btns">
                    <!-- Account -->
                    <li class="header-account dropdown default-dropdown">
                        <div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
                            <div class="header-btns-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <a href="/account/profile">
                                <div style="width: 150px"><strong class="text-uppercase"><i>
                                            {{#if user}}
                                            {{user.FULL_NAME}}
                                            {{else}}
                                            Tài khoản
                                            {{/if}}
                                        </i></strong></div>
                            </a>
                        </div>
                        {{#if user}}
                        <a href="/account/logout" style="font-size: 12px">Đăng xuất</a>
                        {{else}}
                        <a href="/account/login" style="font-size: 12px">Đăng nhập</a>
                        {{/if}}
                        <ul class="custom-menu">
                            <li>Xin chào, 
                                    <b>
                                        {{#if user}}
                                        {{user.FULL_NAME}}
                                        {{else}}
                                        Khách
                                        {{/if}}
                                    </b>!
                                </li>
                            {{#if user}}
                            <li><a href="#"><i class="fas fa-user"></i> Hồ sơ</a></li>
                            <li><a href="#"><i class="fas fa-heart"></i> Danh sách yêu thích</a></li>
                            {{else}}
                            <li><a href="/account/login"><i class="fas fa-unlock-alt"></i> Đăng nhập</a></li>
                            <li><a href="/account/register"><i class="fas fa-user-plus"></i> Đăng ký</a></li>
                            {{/if}}
                            <li><a href="#"><i class="fas fa-check"></i> Thanh toán</a></li>
                        </ul>
                    </li>
                    <!-- /Account -->

                    <!-- Cart -->
                    <!-- /Cart -->

                    <!-- Mobile nav toggle-->
                    <li class="nav-toggle">
                        <button class="nav-toggle-btn main-btn icon-btn"><i class="fas fa-bars"></i></button>
                    </li>
                    <!-- / Mobile nav toggle -->
                </ul>
            </div>
        </div>
        <hr>
        <!-- header -->
    </div>
    <!-- container -->

</header>
<!-- /HEADER -->