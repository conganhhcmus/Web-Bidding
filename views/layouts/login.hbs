<script>
    $(document).ready(() => {
        $('#inputDob').datepicker();

        $('#registerButton').click((e) => {
            // Validation
            if ($('#form-register').find('input[name=password]').val() !== $('#form-register').find('input[name=confirm_password]').val()) {
                alert('Mật khẩu đã nhập không khớp.');
                return false;
            }
            if (isNaN(Date.parse($('#form-register').find('input[name=dob]').val()))) {
                alert('Ngày sai định dạng. Ngày giờ phải ở dạng: 12/31/2019.');
                return false;
            }
            else if (Date.parse($('#form-register').find('input[name=dob]').val()) > Date.parse(Date())) {
                alert('Ngày sinh đã nhập không hợp lệ.');
                return false;
            }


      })
    })

