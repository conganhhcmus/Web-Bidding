<!-- HOME -->
<div id="home">
    <div class="container">
        <div class="home-wrap" style="padding-left: 0.5em;">

            <div class="row">
                <!-- section title -->
                <div class="col-md-12">
                    <div class="section-title">
                        <h2 class="title">Sản phẩm đang đấu giá</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th>Giá khởi điểm</th>
                                <th>Giá hiện tại</th>
                                <th>Giá của bạn</th>
                                <th>Người bán</th>
                            </tr>
                        </thead>
                        {{#each biddingList}}
                        <tbody>
                            <tr onclick="window.location='/product/{{proIDBL}}';">
                                <td>{{sttBL}}</td>
                                <td class="productBL-img">
                                    <img src="/images/product/{{mainImgBL.HASH_NAME}}" alt="">
                                </td>
                                <td> {{proNameBL}}</td>
                                <td> {{startPriceBL}}</td>
                                <td> {{priceBL}}</td>
                                <td> {{endTimeBL}}</td>
                                <td> {{sellerIDBL}}</td>

                            </tr>
                        </tbody>
                        {{/each}}
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>