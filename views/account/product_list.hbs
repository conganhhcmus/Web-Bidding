<!-- HOME -->
<div id="home">
    <div class="container">
        <div class="home-wrap" style="padding-left: 0.5em;">

            <div class="row">
                <!-- section title -->
                <div class="col-md-12">
                    <div class="section-title">
                        <h2 class="title">Sản phẩm đã có người mua</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th>Giá khởi điểm</th>
                                <th>Giá mua</th>
                                <th>Thời điểm bán</th>
                                <th>Người mua</th>
                            </tr>
                        </thead>
                        {{#each bidList}}
                        <tbody>
                            <tr onclick="window.location='/product/{{proIDBL}}';"  {{#if isEqualYourPriceBL}} class="opct opacity-40" {{/if}} >
                                <td>{{sttBL}}</td>
                                <td class="productWL-img">
                                    <img src="/images/product/{{mainImgBL.HASH_NAME}}" alt="">
                                </td>
                                <td> {{proNameBL}}</td>
                                <td> {{startPriceBL}}</td>
                                <td> {{nowPriceBL}}</td>
                                <td> {{starttime}}</td>
                                <td> {{buyerIDBL}}</td>                           
                            </tr>
                        </tbody>
                        {{/each}}
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>